<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FullInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="№ залогового билета" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Клиент" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Телефоны" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата выдачи" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата погашения" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Кол-во дней" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сумма кредита" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="% ставка" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сумма %" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вид залога" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Залоговая стоимость" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_extension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Продление" />

            <Button
                android:id="@+id/button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Закрытие" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>